{
  "name": "yggdrasil",
  "description": "belo standard library",
  "version": "0.1.4",
  "author": "belo tech team <tech@belo.app>",
  "license": "MIT",
  "scripts": {
    "commit": "commit",
    "release": "release-it",
    "prepare": "husky install",
    "clean": "rm -rf dist",
    "typecheck": "tsc -p tsconfig.build.json",
    "lint": "eslint --cache --ext .js,.ts ./src"
  },
  "dependencies": {
    "memoizee": "^0.4.15"
  },
  "devDependencies": {
    "jormungand": "git+ssh://git@github.com:belo-app/jormungand.git#0.2.1",
    "@types/memoizee": "^0.4.8"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "skipChecks": true,
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "CHANGELOG.md"
      }
    }
  }
}
