{
  "env": {
    "targets": {
      "node": "18"
    }
  },
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    },
    "target": "es2022",
    "keepClassNames": true,
    "externalHelpers": true
  },
  "module": {
    "type": "commonjs"
  },
  "minify": true,
  "sourceMaps": "inline"
}